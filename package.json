{
  "name": "@collectivexyz/revolution",
  "version": "0.0.0",
  "scripts": {
    "build:sizes": "forge build --sizes",
    "dev": "FOUNDRY_PROFILE=dev forge test --watch -vvv",
    "test": "forge test -vvv",
    "build:contracts": "forge build",
    "prettier:check": "prettier --check 'packages/**/*.sol' 'test/**/*.sol'",
    "prettier": "prettier --write 'packages/**/*.sol' 'test/**/*.sol'",
    "lint": "prettier --check 'packages/**/*.sol' 'test/**/*.sol'",
    "clean": "forge cache clean && if [ -d out ]; then forge clean; fi"
  },
  "devDependencies": {
    "prettier": "2.8.8",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "3.4.1"
  },
  "bugs": {
    "url": "https://github.com/collectivexyz/revolution-protocol/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/collectivexyz/revolution-protocol.git"
  }
}
